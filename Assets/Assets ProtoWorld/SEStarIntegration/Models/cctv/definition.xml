<?xml version="1.0" encoding="utf-8"?>
<smartobject
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:noNamespaceSchemaLocation="../definition.xsd"
 name="CCTV"
 view_color="(0.1,0.1,0.1)"
 view_mesh="security_cam_001_resized.obj"
 navigation_mesh="global:invisible.obj"
>

  <!-- ============================== VARIABLES ========================== -->

	<variables>
		<var name="isPinhole" value="0.0" />
		<var name="ui_rotation_precision" value="10.0" />
		<var name="horizontalfov" value="75.0" />
		<var name="ratio" value="1.333" />
		<var name="plan_near" value="0.20" />
		<var name="plan_far" value="40.0" />
		<var name="offsetz" value="3.0" />
	</variables>

  <!-- =============================== STATES ============================ -->

  <state name="Normal">
    <targets>
      <nop id="entry_point"/>
      <move id="approach" destination="(0,0,0)"/>
      <interact id="disorient" name="Disorient" duration="2000" animation="manipulate">
        <give certificate="SYSTEM_DESTROYED"/>
      </interact>
      <interact id="disorient_continue" duration="1000" animation="manipulate">
        <debug type="random_orientation_camera"/>
        <changestate to="Disoriented"/>
      </interact>
    </targets>

    <transitions>
      <transition from="entry_point" to="approach"/>
      <transition from="approach" to="disorient"/>
      <transition from="disorient" to="disorient_continue"/>
    </transitions>
  </state>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

  <state name="Disoriented"/>

</smartobject>
